N2A.schema=1
$metadata
 notes=This is essentially a Hodgkin-Huxley passive compartment. Ion channels may be added as subcomponents to create more complex dynamics. Subclasses may also override the dynamics directly, without the use of ion channels.
C=1uF
 $metadata
  backend.stpu.parm
  backend.xyce.param="cMem"
  public
G=0.3mS
 $metadata
  backend.stpu.parm
  backend.xyce.param="gMem"
  public
I=0
 $metadata
  backend.stpu.parm
  public
V=Vrest@$init
 $metadata
  backend.stpu.parm=value
V'=(G*(Vrest-V)+I)/C
Vrest=-54.4mV
 $metadata
  backend.stpu.parm=rest
  backend.xyce.param="eLeak"
