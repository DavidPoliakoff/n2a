N2A.schema=1
name=Neuron LIF
stpu.component=stpu.lif
v = v_reset @ v >= v_thresh
v' = -leakage * (v - v_reset)
v_reset = 0.0
 stpu.param = "pot_qct"
v_thresh = 10.0
 stpu.param = "pot_thr"
v = v_reset @ $init
leakage = 0.1
 stpu.param = "lkg_val"
v = v_max @ v > v_max
v = v_min @ v < v_min
v_max = 127.0
 stpu.param = "pot_max"
v_min = -128.0
 stpu.param = "pot_min"

